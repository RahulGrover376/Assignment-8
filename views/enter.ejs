<%- include('./partials/header') %>

<section class="mt-5">
    <form action="/home" method="POST">
        <fieldset>
            <legend for="name">Enter Name</legend>
            <input type="text" name="name" id="name" required>
            <br>
            <legend for="email">Enter Email</legend>
            <input type="email" name="email" id="email" required>
            <br>
            <legend  for="phone">Enter Phone Number</legend>
            <input type="text" name="phone" id="phone">
            <br>
            <legend for="hrs">Enter time(IN 24 HRS FORMAT)</legend>
            <input type="number" name="cinh" id="cinh" min="0" max="23" required>
            <input type="number" name="cinm" id="cinm" min="0" max="59" required>
            <br>
            <br>
            <button type="submit" id="submit">Submit</button>
        </fieldset>
    </form>
</section>



